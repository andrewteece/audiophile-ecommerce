{
  "name": "Audiophile Eâ€‘commerce (Next.js + TS)",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "nodeGypDependencies": true
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "remoteUser": "node",

  "containerEnv": {
    "PNPM_STORE_DIR": "/home/node/.pnpm-store"
  },
  "mounts": [
    "type=cache,target=/home/node/.pnpm-store"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "Orta.vscode-jest",
        "firsttris.vscode-jest-runner",
        "bierner.markdown-mermaid",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "typescript.tsdk": "node_modules/typescript/lib",
        "jest.autoRun": "off"
      }
    }
  },

  "updateContentCommand": "",
  "postCreateCommand": "bash -lc 'corepack enable && corepack prepare pnpm@10.14.0 --activate && pnpm install'",
  "postStartCommand": "",

  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": { "label": "Next.js dev server", "onAutoForward": "notify" }
  }
}
