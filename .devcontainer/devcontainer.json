{
  "name": "Audiophile Eâ€‘commerce",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "20" },
    "ghcr.io/devcontainers-extra/features/pnpm:2": { "version": "9" }
  },
  "updateRemoteUserUID": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "typescript.tsdk": "node_modules/typescript/lib"
      }
    }
  },
  "remoteEnv": { "NEXT_TELEMETRY_DISABLED": "1" },
  "postCreateCommand": "corepack enable --install-directory ~/.local/bin && corepack prepare pnpm@latest --activate && pnpm install"
,
  "postStartCommand": "if [ -f package.json ] && [ ! -d node_modules ]; then pnpm install; fi",
  "forwardPorts": [3000]
}
